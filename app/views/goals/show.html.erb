<section class="container-fluid">
	
	<div class="row" style="padding-left: 3%;">
		<div class="col-xs-10">
			<h2><%= @goal.name %></h2>
		</div>
		<div class="col-xs-2">
			<br>
			<%= link_to goals_path, class: 'btn btn-info' do %>
				<i class="fa fa-chevron-left fa-fw"></i>
				Regresar
			<% end %>
		</div>
	</div>

	<br>
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-default">

				<!-- Panel heading -->
				<div class="panel-heading">
					<i class="fa fa-info fa-fw"></i> Datos del objetivo
				</div>

				<!-- Panel body -->
				<div class="panel-body">
					<div class="row">
						<div class="col-xs-4">
							<h4>
								<i class="fa fa-calendar-check-o fa-fw"></i><strong> Fecha de inicio: </strong>
								<%= ' ' + @goal.start_date.to_formatted_s(:long) %>
							</h4>
						</div>
						<div class="col-xs-4">
							<h4>
								<i class="fa fa-calendar-minus-o fa-fw"></i><strong> Fecha de fin: </strong>
								<%= ' ' + @goal.end_date.to_formatted_s(:long) %>
							</h4>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<h4>
								<% if @goal.goal_type == 1 %>
									<i class="fa fa-user fa-fw"></i><strong> Tipo de objetivo: </strong>
								<% else %>
									<i class="fa fa-group fa-fw"></i><strong> Tipo de objetivo: </strong>
								<% end %>
								<%= ' ' + (@goal.goal_type == 1 ? 'Individual' : 'Grupal') %>
							</h4>
						</div>
						<% if !@goal.description.nil? %>
							<br><br><hr>
							<div class="col-xs-12">
								<h4>
									<i class="fa fa-calendar-minus-o fa-fw"></i><strong> Descripci√≥n: </strong>
									<br><br>
									<p><%= @goal.description %></p>
								</h4>
							</div>
						<% end %>
					</div>
				</div>

			</div>
		</div>
	</div>

</section>
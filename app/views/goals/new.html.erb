<section class="container-fluid">
	
	<div class='row' style='padding-left: 3%;'>
		<h2>Nuevo objetivo</h1>
	</div>

	<br>
	<%= form_for(@new_goal) do |f| %>
		<div class="row">
			<div class="col-xs-12">
				<div class="panel panel-default">

					<div class="panel-heading">
						<i class="fa fa-info fa-fw"></i>
						 Información sobre nuevo objetivo
					</div>

					<div class="panel-body form">
						<div class="form-body">
							<div class="row">
								<div class="col-xs-5">
									<div class='form-group form-md-line-input'>
										<%= hidden_field_tag :from, params[:from] %>
										<%= f.label :name,'Nombre *' %>
		        				<%= f.text_field :name, class: 'form-control', placeholder: 'Objetivo', required: true, autofocus: true %>
									</div>
									<div class="row">
										<div class="col-xs-6">
											<div class="form-group form-md-line-input">
												<%= f.label :start_date, 'Fecha de inicio *' %>
												<%= f.date_field :start_date, class: 'form-control', required: true %>
											</div>
										</div>
										<div class="col-xs-6">
											<div class="form-group form-md-line-input">
												<%= f.label :end_date, 'Fecha de fin *' %>
												<%= f.date_field :end_date, class: 'form-control', required: true %>
											</div>
										</div>
									</div>
									<div class="form-group form-md-line-input">
										<%= f.label :goal_type, 'Tipo de objetivo *' %>
										<%= f.select :goal_type, options_for_select({ 'Individual' => 1, 'Grupal' => 2 }), { include_blanck: false }, class: 'form-control', required: true %>
									</div>
								</div>
								<div class="col-xs-7">
									<div class='form-group form-md-line-input'>
										<%= f.label :description,'Descripción del objetivo' %>
		        				<%= f.text_area :description, rows: 8, class: 'form-control', autofocus: true %>
									</div>
								</div>
							</div>
						</div>
						<br>

						<div class="form-actions outside text-center">
							<div class="field">
								<%= link_to 'Cancelar', goals_path, class: 'btn btn-danger' %>
								<%= f.submit 'Guardar', class: 'btn btn-primary' %>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	<% end %>

</section>